{
  "manifest_version": 2,

  "name": "Hackstension",
  "description": "An extension, but a hack... many hacks...",
  "version": "1.0.0",

  "browser_action": {
    "default_icon": "InvisiIcon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": [ "background.js" ],
    "persistent": true
  },

  "permissions": [
    "activeTab"
  ]
}
